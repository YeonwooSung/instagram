# Application
APP_NAME=Instagram Newsfeed Service
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8004

# Database (PostgreSQL via pgdog)
DATABASE_URL=postgresql://instagram_user:instagram_password@localhost:6432/instagram
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
REDIS_ENABLED=true

# Auth Service Integration
AUTH_SERVICE_URL=http://localhost:8001
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256

# Other Services
POST_SERVICE_URL=http://localhost:8002
GRAPH_SERVICE_URL=http://localhost:8003
MEDIA_SERVICE_URL=http://localhost:8000

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ENABLED=true
KAFKA_CONSUMER_GROUP=newsfeed-service

# Kafka Topics - Consume
KAFKA_TOPIC_POST_CREATED=post.created
KAFKA_TOPIC_POST_DELETED=post.deleted
KAFKA_TOPIC_FOLLOW_ACCEPTED=follow.accepted
KAFKA_TOPIC_UNFOLLOW=follow.removed

# Kafka Topics - Produce
KAFKA_TOPIC_FEED_UPDATED=feed.updated

# CORS
CORS_ORIGINS=["*"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Feed Settings
CELEBRITY_FOLLOWER_THRESHOLD=100000
MAX_FEED_ITEMS_PER_USER=500
FEED_CACHE_TTL=300

# Cache TTL (seconds)
CACHE_TTL_FEED=300
CACHE_TTL_FEED_ITEM=600
