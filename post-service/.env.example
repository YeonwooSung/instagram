# Application
APP_NAME=Instagram Post Service
APP_VERSION=1.0.0
DEBUG=False

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=instagram_posts
MONGODB_COLLECTION=posts

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_POST_CREATED=post.created
KAFKA_TOPIC_POST_UPDATED=post.updated
KAFKA_TOPIC_POST_DELETED=post.deleted
KAFKA_TOPIC_POST_LIKED=post.liked
KAFKA_TOPIC_POST_COMMENTED=post.commented

# Auth Service
AUTH_SERVICE_URL=http://localhost:8001

# Media Service
MEDIA_SERVICE_URL=http://localhost:8000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# CORS
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=True
