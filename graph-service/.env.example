# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8003

# Database (PostgreSQL via pgdog)
DATABASE_URL=postgresql://instagram_user:instagram_password@localhost:6432/instagram
DB_POOL_SIZE=20

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=true

# Auth Service Integration
AUTH_SERVICE_URL=http://localhost:8001
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ENABLED=true

# CORS
CORS_ORIGINS=["*"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Follow Settings
MAX_FOLLOWING_LIMIT=7500
FOLLOW_REQUEST_EXPIRY_DAYS=30

# Cache TTL (seconds)
CACHE_TTL_FOLLOWERS=300
CACHE_TTL_FOLLOWING=300
CACHE_TTL_RELATIONSHIP=600
CACHE_TTL_STATS=60
